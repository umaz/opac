<%# coding: UTF-8 %>
<html>
  <head>
    <link rel="stylesheet" href="opac-book.css">
    <title><%=main[1]%></title>
  </head>
  <body>
<h1><a href="opac.html" style="color:#000000;text-decoration:none">OPAC蔵書検索システム</a></h1>
      <form method="GET" action="opac.cgi">
        <div class="search">
          <select class="field" name="field">
            <option value="any" selected>全ての項目から</option>
            <option value="title">書名</option>
            <option value="author">著者名</option>
            <option value="pub">出版者名</option>
            <option value="ed">版表示</option>
            <option value="series">シリーズ名</option>
            <option value="page">ページ数</option>
            <option value="size">大きさ</option>
            <option value="isbn">ISBN</option>
            <option value="nbc">全国書誌番号</option>
            <option value="note">注記</option>
            <option value="holdingsrecord">所在情報識別番号</option>
            <option value="holdingloc">所在情報</option>
          </select>
            <input type="text" name="keyword" class="keyword_detail"　placeholder="検索するキーワードを入力してください">
            <select class="condition" name="condition">
              <option value="all" selected>すべて含む</option>
              <option value="once">いずれかを含む</option>
              <option value="start">始まる</option>
              <option value="equal">一致する</option>
              <option value="not">いずれも含まない</option>
　　　　　　　　　　　　</select>
            <input type="submit" value="絞り込み検索" class="button_detail">
            <input type="hidden" value="1" name="p">
          </div>
        </form>
    <hr>
    <h2>検索結果書誌詳細</h2>
　　　　<h3><%=main[1]%><%=main[2]%></h3>
    <h4><%=main[0]%></h4>
    <table>
      <tr>
        <th><%=header[1]%></th>
        <td><%=main[1]%><%=main[2]%></td>
      </tr>
      <%n = 0%>
      <%main[3].each do |x|%>
      <%if n == 0%> 
      <tr>
        <th><%=header[2]%></th>
        <td><%=x%></td>
      <% n = n + 1%>
      </tr>
      <%else%>
      <tr>
        <th></th>
        <td><%=x%></td>
      </tr>
      <%end%>
      <%end%>
      <%if main[4] == nil%>
      <%else%>
      <tr>
        <th><%=header[3]%></th>
        <td><%=main[4]%><%=main[5]%></td>
      </tr>
      <%end%>
      <%if main[6] == nil%>
      <%else%>
      <tr>
        <th><%=header[4]%></th>
        <td><%=main[6]%></th>
      </tr>
      <%end%>
      <%if main[7][0] == nil%>
      <%else%>
      <%n = 0%>
      <%main[7].each do |x|%>
      <%if n == 0%>
      <%if x[1] == ""%>
      <tr>
        <th><%=header[5]%></th>
        <td><%=x[0]%></td>
      <%n = n + 1%>
      </tr>
      <%else%>
      <tr>
        <th><%=header[5]%></th>
        <td><%=x[0]%> (<%=x[1]%>)</td>
      <%n = n + 1%>
      </tr>
      <%end%>
      <%else%>
      <%if x[1] == ""%>
      <tr>
        <th></th>
        <td><%=x[0]%></td>
      </tr>
      <%else%>
      <tr>
        <th></th>
        <td><%=x[0]%> (<%=x[1]%>)</td>
      </tr>
      <%end%>
      <%end%>
      <%end%>
      <%end%>
      <tr>
        <th><%=header[6]%></th>
        <td><%=main[8]%></td>
      </tr>
      <tr>
        <th><%=header[7]%></th>
        <td><%=main[9]%></td>
      </tr>
      <tr>
        <th><%=header[8]%></th>
        <td><%=main[10]%>.<%=main[11]%></td>
      </tr>
      <tr>
        <th><%=header[9]%></th>
        <td><%=main[12]%></td>
      </tr>
      <tr>
        <th><%=header[10]%></th>
        <td><%=main[13]%></td>
      </tr>
      <%if main[14][0] == nil%>
      <%else%>
      <%n = 0%>
      <%main[14].each do |x|%>
      <%if n == 0%>
      <tr>
        <th><%=header[11]%></th>
        <td><%=x%></td>
      <%n = n + 1%>
      </tr>
      <%else%>
      <tr>
        <th></th>
        <td><%=x%></td>
      </tr>
      <%end%>
      <%end%>
      <%end%>
      <tr>
        <th><%=header[12]%></th>
        <td><%=main[15]%></td>
      </tr>
      <%if main[16][0] == nil%>
      <%else%>
      <%n = 0%>
      <%main[16].each do |x|%>
      <% if n == 0%>
      <tr>
        <th><%=header[13]%></th>
        <td><%=x%></td>
      <%n = n + 1%>
      </tr>
      <%else%>
      <tr>
        <th></th>
        <td><%=x%></td>
      </tr>
      <%end%>
      <%end%>
      <%end%>
      <tr>
        <th><%=header[14]%></th>
        <td><%=main[17]%></td>
      </tr>
      <tr>
        <th><%=header[15]%></th>
        <td><%=main[18]%></td>
      </tr>
    </table>
    <form>
      <div class="back">
        <input type="button" value="検索結果一覧に戻る" onClick="history.back()" class="back">
      </div>
      <div class="top">
  　　　　　　<input type="button" onclick="location.href=opac.html"value="トップページへ" class="top">
      </div>
    </form>
  </body>
</html>
